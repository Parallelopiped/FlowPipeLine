[Unit]
Description=GPU Usage Monitor Service
After=network.target

[Service]
User=lxdserver
Group=lxdserver
WorkingDirectory=/home/lxdserver/software/gpu-monitor-multinode
ExecStart=/home/lxdserver/miniconda3/bin/conda run -n gpu_monitor python slave.py
Restart=always
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=gpu-monitor
Environment=FLASK_APP=slave.py
Environment=FLASK_RUN_HOST=0.0.0.0
Environment=FLASK_RUN_PORT=5001

[Install]
WantedBy=multi-user.target
